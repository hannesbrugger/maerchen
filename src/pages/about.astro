---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Layout from "../layouts/BlogPost.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<div
			class="bg-slate-900 min-h-screen sm:grid sm		:grid-cols-12 grid-row s-12 p-10 gap-16"
		>
			<div transition:name="ulli" class="sm:col-span-3 rounded-md">
				<img
					src="../../public/profile.jpeg"
					class="w-full object-cover rounded-t-md"
				/>
				<div
					class="bg-slate-100 p-3 rounded-b-md flex flex-col items-center"
				>
					<p class="font-semibold">Ulli Brugger</p>
					<p class="font-medium">Märchenerzählerin</p>
				</div>
			</div>
			<div class="text-slate-100 flex flex-col col-span-9">
				<p class="text-4xl mb-4">Hallo ich bin die Ulli,</p>
				<p>
					ich bin schon seit Jahren Märchenerzählerin und habe meine
					Ausbildung in ... gemacht. Egal ob Kindern oder Senioren, es
					gibt immer ein Märchen das uns in unser jetzigen Situation
					berührt und zum Nachdenken bringt.
				</p>
			</div>
		</div>
		<Footer /></body
	>
</html>
