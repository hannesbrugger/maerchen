---
import "../styles/forms.scss";
---

<form class="form" action="https://formspree.io/f/myzgwepp" method="POST">
    <h2 class="title">Fragen ?</h2>
    <div class="subtitle">Kontaktieren Sie mich !</div>

    <div class="input-container ic1">
        <input name="name" class="input" type="text" placeholder=" " />
        <div class="cut"></div>
        <label for="firstname" class="placeholder">Name</label>
    </div>

    <div class="input-container ic2">
        <input name="email" class="input" type="text" placeholder=" " />
        <div class="cut cut-short"></div>
        <label for="email" class="placeholder">Email</label>
    </div>

    <div class="input-container-text ic2">
        <textarea name="text" class="input text" placeholder=" " rows="4"
        ></textarea>
        <div class="cut cut-short"></div>
        <label for="text" class="placeholder">Text</label>
    </div>

    <button class="submit bg-glaucous" type="submit">Senden</button>
</form>
